{
  "extends": "standard",
  "installedESLint": true,
  "plugins": [
    "standard",
    "promise"
  ],
  "globals": {
    "$": true,
    "angular": true,
    "layui": true,
    "layer": true
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }
    ],
    "no-path-concat": 0,
    "eol-last": 0
  }
}